	<title>Caja <%= estacionDeCobro.ubicacionDeEstacion %> ESCOSOSA</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<link rel="stylesheet" href="/sass/specific/agregarProducto.css">
	<link rel="stylesheet" href="/sass/specific/cajacobro.css">
	<link rel="stylesheet" href="/sass/specific/borrarDeCaja.css">
</head>

<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="container">
			<a class="navbar-brand" href="#">EscososaApp</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse"
				data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
				aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link active" aria-current="page" href="/caja/<%= estacionDeCobro._id %>/inicio">Ir
							a inicio</a>
					</li>



				</ul>
				<div class="dropdown text-end">
					<a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
						data-bs-toggle="dropdown" aria-expanded="false">
						CAJA
					</a>

					<ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">

						<li><a class="dropdown-item" href="/cerrar-sesion">Cerrar sesión</a></li>
					</ul>
				</div>

			</div>
		</div>
	</nav>

	<div class="container">
		<p id="idEstacion"><%= estacionDeCobro._id %></p>
		<div class="filaA row mt-4">
			<div class="col-md-8 columI">

				<div class="row">
					<div class="utilFlex">
						<form id="cajaCobroForm" class="headerDiv d-flex justify-content-around">

							<input class="inputBuscar" id="textBuscar" type="text"
								placeholder="Buscar producto por código">
							<input id="sbBuscar" type="submit" class="btnBuscar" value="Buscar">
											<button id="borrarInvisible">Eliminar selección</button>
						</form> <button class="btnAddMan" id="llamadorVerde">Agregar producto manualmente</button>
					</div>

								
							<div class="filaB row">

						<table class="table table-dark table-hover mt-4 mb-4">
							<tr>
								<th class="thNombre">Nombre</th>
								<th>Cantidad</th>
								<th>Precio unitario</th>

								<th><b>Subtotal</b></th>

							<th></th>
						</tr>
							<tbody class="overflow-scroll" id="tablaCajaCobro">


							</tbody>



						</table>
						<div class="boxPrecioContainer">
							<div class="boxPrecio">
								<p id="total">Total: $</p>
							</div>
						</div>
					</div>
				</div>
				<div class="btnContainer mt-4">
					<div id="callFiambreria" class="btnFunc">Agregar Producto Fiambrería</div>
					<div id="cancelarCompra" class="btnFunc">Cancelar Compra</div>
					<!-- <div id="cambiarPrecio" class="btnFunc">Cambiar Precio</div> -->
					<!-- <div id="imprimirTicketA" class="btnFunc">Imprimir Ticket-A</div> -->
					<div id="eliminarProductos" class="btnFunc">Eliminar Producto</div>
					<div id="agregarProducto" class="btnFunc">Agregar prod. a la lista</div>
				</div>
			</div>
			<div class="col-md-4 columD">
				<div class="row filaDSup">
					<h4>Ofertas minoristas</h4>
				
				</div>
				<div tyle="overflow-y: scroll; height:400px;" class="row filaMedio scroll-ofertas">
					<ul id="ulOfertas">
					</ul>
										</ul>
			</div>
				<div class="row filaDInf">

					<p class="subt">Dinero ingresado</p>
					<div class="boxDinero">
						<label>$</label><input id="dineroIngresado" type="number">
					</div>

				<div>
					<p class="subt">Vuelto</p>
					<p id="vuelto">$0.00</p>


				</div>
				<div class="row">
					<input class="d-none" type="text" value="<%= estacionDeCobro._id %> " name="inputEstacionDeCobroID" id="inputEstacionDeCobroID">
					<input class="d-none" type="text" value="<%= usuarioID %>" name="inputUsuarioID" id="inputUsuarioID">

					<button id="finalizarCompra" class="finalizarCompra">Finalizar compra</button>
					<div class="form-check">
						<input class="form-check-input" name="tipoDePagoCheck" type="checkbox" value="OTRO" id="flexCheckDefault">
						<label class="form-check-label" for="flexCheckDefault">
						 Compra En TARJETA/TRANSFERENCIA
						</label>
					  </div>	
					  
					  
					<p class="lead text-succes" id="textoVentaFinalizada"></p>
						</div>
			</div>

		</div>


	</div>





	<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
	<script type="module" src="/edit.js"></script>
	<script type="module" src="/cajaCobro.js"></script>
	<script type="module" src="/eliminarDeCaja.js"></script>
	<script type="module" src="/agregarProducto.js"></script>
	<script type="module" src="/fiambreria.js"></script>
	<script type="module" src="/editarPrecio.js"></script>
	<script src="https://unpkg.com/hotkeys-js/dist/hotkeys.min.js"></script>
	
	

