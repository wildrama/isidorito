<%- include('../partials/headerPedido.ejs'); %>

<%- include('../partials/flash.ejs'); %>

<div class="container">

    <a href="/clientes/clientes-index" class="p-3 btn btn-info">Volver atras</a>

    <h3>Clientes actuales </h3>
    <p>A continuación de muestran todos los clientes cargados en el sistema</p>
    <div class="row justify-content-around">
    

            <% for( let cliente of todosLosClientes) { %>
            
                <div class="col-12 col-md-6 d-flex justify-content-center">

            <div class="card px-3">
               
                
                

                <div class="card-tittle">
                    <div class="d-flex align-items-baseline justify-content-between">
                       Local: 

                        <p class="lead">
                        <%= cliente.nombreLocal %> 

                        </p>
                    </div>
                    <p class="text-muted">
                        Ref: <%= cliente.dueño  %> 
                    </p>
                </div>

                <div class="card-body">
                    Dirección: <%= cliente.direccion %> 
                    <br>
                    Telefono 1: <%=cliente.telefono1  %> 
                    <br>
                    Telefono 2: <%=cliente.telefono2   %> 
                    <br>
                    Telefono 3: <%=cliente.telefono3   %> 

                   <div class="">
                    Comentario:
                    <p class="p-2">

                    </p>
                   </div>
                   
                   <a href="/clientes/<%= cliente._id %>" class="text-center btn btn-warning">Ver pedidos para este cliente</a>
                
                </div>
            </div>
        </div>

            <% } %>
      
    
    </div>
</div>

<%- include('../partials/footer.ejs'); %>
