                </ul>
        
                <div class="col-6">
                  <div class="row">
                    <div class="col-12">
                      <h4 class="text-center">Ofertas individuales</h4>
                      <table class="table table-hover" >
            
                        <thead>
                          <tr>
                            <th scope="col">Nombre</th>
              
                            <th scope="col">Precio Oferta</th>
                  
                            <th scope="col">Cantidad de necesaria</th>
            
                            <th scope="col">Fecha vigencia</th>
                  
                  
                  
                  
                          </tr>
                        </thead>
                        <tbody>
                          <% for (let ofertaIndividual of ofertasIndividuales){ %>
                            <tr>
                             
                              <td>
                                <a href="/administrador/ofertas/oferta-individual/<%= ofertaIndividual._id %>"><%= ofertaIndividual.productoEnOferta.nombre %></a>
                              </td>
                              <td>
                                <%= ofertaIndividual.precioOferta %>
                              </td>
                        
                             
                              <td>
                                <%= ofertaIndividual.cantidadDeUnidadesNecesarias %>
                              </td>
                              
                              <td>
                                <%= ofertaIndividual.fechaDeVigencia.toLocaleDateString() %>
                              </td>
                  
                  
                            </tr>
                            <%} %>
                  
                  
                  
                        </tbody>
                      </table>
                    </div>
                  </div>
                 
                </div>
        <div class="col-6">
          <div class="row">
            <div class="col-12">
              <h4 class="text-center">Ofertas conjunto</h4>
              <table class="table table-hover" >
    
                <thead>
                  <tr>
                    <th scope="col">Nombre</th>
      
                    <th scope="col">Precio Oferta</th>
          
          
                    <th scope="col">Fecha vigencia</th>
          
          
          
          
                  </tr>
                </thead>
                <tbody>
                  <% for (let ofertaConjunto of ofertasConjunto){ %>
                    <tr>
                     
                      <td>
                        <a href="/administrador/ofertas/oferta-conjunto/<%= ofertaConjunto._id %>"><%= ofertaConjunto.nombreOferta %></a>
                      </td>
                      <td>
                        <%= ofertaConjunto.precioOferta %>
                      </td>
                
                     
                    
                      
                      <td>
                        <%= ofertaConjunto.fechaDeVigencia.toLocaleDateString() %>
                      </td>
          
          
                    </tr>
                    <%} %>
                      
    
    
                </tbody>
              </table>
            </div>
          </div>
         
        </div>

       
    </div>
    
   
</div>
