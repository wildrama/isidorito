                        <a class="productosAcciones" href="/administrador/productos/<%= producto._id %>/upstock "><img width="32px" height="32px" src="/imgs/png/verCompleto.png" alt=""></a>

                     
                      </td>
                      <td>
                        <a href="/administrador/productos/<%= producto._id %>"><%= producto.nombre %></a>
                      </td>
                   
                    
                      
                      <td>
                        <%= producto.marca %>
                      </td>
                      <td>
                        <%= producto.precioMayorista %>
                      </td>
            
                      <td>
                        <%= producto.cantidad %>
                      </td>
                      <td>
                        <%= producto.categoriaInterna %>
                      </td>
                      
                      <td>
                        <%= producto.peso %>
                      </td>
