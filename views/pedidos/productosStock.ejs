                    <input class="form-control" type="search" name="inputBuscadorSTOCK" id="inputBuscadorSTOCK">
                </form>
            </div>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col"> </th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Marca</th>

                    <th scope="col">Precio Mayorista</th>
            
